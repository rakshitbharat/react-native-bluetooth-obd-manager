// tsconfig.json
{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "resolveJsonModule": true,
    "types": ["jest", "node"]
  },
  "exclude": [
    "**/node_modules",
    "**/.*",
    "**/dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__"
  ],
  "include": ["src"]
}