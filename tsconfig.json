// tsconfig.json
{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "jsx": "react-native",
    "declaration": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "lib/typescript",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["jest", "react-native", "node"]
  },
  "exclude": [
    "**/node_modules",
    "**/.*",
    "**/dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__"
  ],
  "include": ["src"]
}